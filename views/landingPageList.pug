extends layout
block content
    header.card-header
        h4.card-title Welcome To U-Farm
    |&nbsp
    div.form-row
        div.col.form-group.col-md-10    
            form.search(action='/landingPageList')
                div.form-row
                    div.col-md-8
                        input.form-control(name='gender' placeholder="Enter your search term(gender) ...")
                    div.col-md-4
                        input.btn.btn-dark.btn-block(type="submit")
    table.table
        thead.thead-dark
            tr
                th Upload
                th Name
                th Ward
                th Date
                th Unit price(ugx)
                th Booking
                th Directions                
                th Produce type
                th Availability
                                                                              
        tbody
            if users.length
            each user in users
                tr
                    td
                      img(src='/uploads/'+ user.upload)
                    td #{user.name}
                    td #{user.ward}
                    td #{user.date}
                    td #{user.price}
                    td #{user.booking}
                    td #{user.directions}
                    td #{user.producetype}
                    td #{user.availability}
                    
                    
