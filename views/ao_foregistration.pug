extends layout  
block content
    header.card-header
        h4.card-title Farmer One Registration Form  
    form( method="POST" action='/ao_foregistration' name ="ao_foregistration" onsubmit='return ao_foregForm()')
        div.form-row
            div.col.form-group
                label Name                
                input.form-control(name="name")
                span#nameerror(style= "width:20px")
            div.col.form-group
                label Ward
                span.required
                select.form-control(name="ward")
                    option(value="One") One
                    option(value="Two") Two
                    option(value="Three") Three 
                    option(value="Four") Four
                span#warderror    
            div.col.form-group
                label Reg.Date
                br                
                label.form-check.form-check-inline
                input.form-check-input(type="date" name="regdate" )
                span#regdateerr(style= "width:20px")
        div.form-row 
            div.col.form-group
                label Gender
                span.required
                select.form-control(name="gender")
                    option(value="Female" id="genderF") Female
                    option(value="Male" id="genderM") Male
                span#gendererror    
            div.col.form-group
                label Birthday
                br
                span.required
                label.form-check.form-check-inline
                input.form-check-input(type="date" name="birthdate")
                span#birthdateerror
            div.col.form-group
                label Activities
                span.required
                select.form-control(name="activities")
                    option(value="Horticulture") Horticulture
                    option(value="Poutry") Poultry farming
                    option(value="Dairy") Dairy farming 
                span#activitieserror              
        div.form-row                          
            div.col.form-group
                label NIN No.
                span.required
                input.form-control(name="nin")
                span#ninerror
            div.col.form-group
                label Phone No.
                span.required
                input.form-control(name="phone")
                span#phoneerror
            div.col.form-group
                label Directions
                span.required
                input.form-control(name="directions")
                span#directionserror     
        div.form-row               
            div.col.form-group
                label Resident Type
                span.required
                select.form-control(name="residenttype")
                    option(value="Temporary") Temporary
                    option(value="Permanent") Permanent 
                span#residenttype                                                   
            div.col.form-group
                label Stay Period
                span.required
                select.form-control(name="stayperiod")
                    option(value="10-20") 10-20 years
                    option(value="20+") 20+ years
                span#stayperioderror      
        div.form-row
            div.col.form-group
                label Username
                span.required
                input.form-control(type="text" name="username")
                span#usernameerror                                                
            div.col.form-group
                label Unique Password
                input.form-control(type="password" name="password")
            div.col.form-group
                label Role           
                input.form-control(type="text" name="role" value="FarmerO" readonly)        
        div.form-row
            div.col.form-group
                button.btn.btn-success.btn-block Register
            
    script(src="/js/ao_foReg.js")
            
                
